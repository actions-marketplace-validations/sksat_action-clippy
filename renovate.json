{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["action.yml"],
      "matchStrings": [
        "# datasource=(?<datasource>.*?)?\n\\s+(.*)_REPO: (?<depName>.*?)\n\\s+\\2_VERSION: (?<currentValue>.*)"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
